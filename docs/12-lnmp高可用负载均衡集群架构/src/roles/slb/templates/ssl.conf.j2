server {
    listen 80;
    server_name wordpress.qwe.cn;
    return 301 https://$server_name$request_uri;
}
upstream myweb {
{% for ip in web_backend_ips %}
    server {{ ip }};
{% endfor %}
}
server {
    listen 443 ssl;
    server_name wordpress.qwe.cn;
    ssl_certificate /tmp/server.crt;
    ssl_certificate_key /tmp/server.key;
    location / {
        proxy_pass http://myweb;
        include proxy_params;
    }
}
